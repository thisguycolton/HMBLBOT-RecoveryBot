<script>
  async function loadServerStatus() {
    const res = await fetch("https://api.mcstatus.io/v2/status/java/mc.humblebot.io");
    const data = await res.json();

    const statusBox = document.getElementById("server-status");
    if (!data || !data.online) {
      statusBox.innerHTML = `<span class="text-danger">üî¥ Server Offline</span>`;
    } else {
      const players = data.players.online;
      const max = data.players.max;
      statusBox.innerHTML = `
        <div class="w-100 bg-success "><span class="text-light">Server Online</span></div><br>
        <span class="fw-bold">${data.motd.clean}</span<br>
        <div class="w-100 bg-info mt-4"><span class="text-light">Players: ${players}/${max}</span></div>
      `;
    }
  }

  loadServerStatus();
</script>


