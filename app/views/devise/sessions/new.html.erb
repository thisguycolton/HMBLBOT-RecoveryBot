<div class=" container  mt-5">
  <div class="row">
    <div class="col-lg-6 offset-lg-3 bg-light p-5 rounded mb-5">
      <h2 class="text-center mb-3">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class: "form-check-input", type:"checkbox", id:"flexCheckDefault" %>
          <label class="form-check-label" for="flexCheckDefault">
            Remember me?
          </label>
        </div>

        <% end %>

        <div class="actions mb-3">
          <%= f.submit "Log in", class: "btn btn-primary w-100" %>
        </div>
      <% end %>

      <!-- <%= render "devise/shared/links" %> -->
    </div>
  </div>
</div>