<div class='container-fluid p-0'>
  <div class="jumbotron text-bg-secondary p-5">
    <div class="container">
      <div class="d-flex">
        <span class="flex-fill">
          <h1 class="display-3 fw-bold">Topic Index</h1>
        </span>
      </div>
    </div>
  </div>
</div>
<div class="container py-5">
  <div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-3 reading-index" id="readings">
    <% @readings.each do |reading| %>
      <div class="col reading position-relative">
        <div class="bg-light p-5 ">
          <span class="fw-bold fs-4" style="height: 60px;"><%= reading.title %></span>
          <div class="">
            <blockquote class="blockquote pb-5" style="min-height: 300px;">
              <%= reading.content.to_plain_text.truncate(140, separator: ' ') %>
            </blockquote>
          </div>
          <div class="position-absolute w-75 bottom-0 start-50 translate-middle">
            <div class="row mt-2 ">
              <div class="col">
                <cite title="<%= reading.source %>"><%= reading.source %></cite>
              </div>
              <div class="col-3 text-end">
                <span class="fw-bolder"><%= reading.meetingDate.strftime("%b-%d-%y") %></span>
              </div>
            </div>
            <div class="d-grid gap-2 mt-3">
              <%= link_to "Read More", reading, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<p style="color: green"><%= notice %></p>