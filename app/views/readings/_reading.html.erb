<div id="<%= dom_id reading %>">
  <div class='reading-container container-fluid p-0  position-relative '>
    <div class="jumbotron text-bg-dark py-5 bg-jumbo-blue-dark">
      <div class="container">
        <div class="d-flex">
          <div class="w-100 position-relative">
            <% unless reading.meetingUrl.blank? %>
              <div class=" btn-group position-absolute end-0 d-md-block mt-0 d-none d-md-block align-top" style=" top:10px!important;">
                <a class="btn btn-lg btn-primary " href="<%= reading.meetingUrl %>">   <i class="bi bi-camera-video-fill pe-lg-2"></i><span class="align-text-bottom d-none d-lg-inline"> Join With Zoom </span> </a>
                <button id="reading_<%= reading.id %>_copy_btn" class="btn btn-lg btn-light">
                  <i class="bi bi-clipboard" id="reading_<%= reading.id %>_copy_btn_icon"></i>
                </button>
              </div>
            <% end %>
            <h1 class="display-3 fw-bold"><%= reading.meetingName %></h1>
            <h3 class="display-4 fw-semibold"> Meeting Reading </h3>
            <h3 class="display-5"> <span class="pr-1 "><%= reading.meetingDate.strftime("%B %d, %Y") %></span><span class="fw-lighter"><%= local_time(reading.meetingTime).to_time.strftime("%l:%M %p").sub(':00', '') %></span></h3>
            <% unless reading.meetingUrl.blank? %>
              <div class="btn-group d-flex  d-md-none">
                <a class="btn btn-primary mt-5 w-100  " href="<%= reading.meetingUrl %>">   <i class="bi bi-camera-video-fill pe-3 "></i> Join With Zoom </a>
                <button id="reading_<%= reading.id %>_copy_btn" class="btn btn-light mt-5">
                  <i class="bi bi-clipboard" id="reading_<%= reading.id %>_copy_btn_icon"></i>
                </button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid  bg-light border-top border-bottom border-5 border-light-subtle">
      <div class="container py-5">
        <figure>
          <h1 class="fw-bold mb-4 tracking-widest text-uppercase"><%= reading.title %></h1>
          <blockquote class="blockquote">
            <p>
              <% if reading.richer_content.id.present? %>
                <%= reading.richer_content %>
              <% elsif reading.content.present? %>
                <%= reading.content.body %>
              <% end %>
            </p>
          </blockquote>
          <figcaption class="blockquote-footer">
            <cite title="<%= reading.title %>" class=" fs-3"><%= reading.source %></cite>
          </figcaption>
        </figure>
      </div>
    </div>
  </div>
  <% if reading.topic.to_plain_text.length > 5 %>
    <div class="container-fluid  p-0  example-topics z-n1  bg-jumbo-light">
      <div class="jumbotron position-relative py-5">
        <div class="container">
          <h2 class="text-center display-5 pb-3 fw-bold text-uppercase">Example Topics For Sharing</h2>
          <h3 class="mb-2 text-body-secondary text-center fs-3 tracking-widest"><em>Feel free to check in!</em></h3>
          <div class="bg-white rounded-5 py-5 mt-4 shadow-sm">
            <ul class="list-unstyled li-questions ">
              <%= reading.topic %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="container-fluid  bg-light border-top border-5 border-light-subtle">
    <div class="container py-5 ">
      <div class="row mx-lg-5">
        <div class="col-lg-2 text-center text-lg-start">
          <h1 class="display-2 fw-semibold"><i class="bi bi-chat-right-quote-fill"></i></h1>
        </div>
        <div class="col-lg-10 text-center text-lg-start">
          <span class="display-4"> Share Readings Easier </span>
          <div class="montserrat mt-3 fs-4">Sign up to post your readings and share them with others with a simple click.</div>
        </div>
      </div>
      <div class="row justify-content-center mt-2">
        <div class="col-lg-8">
          <%= link_to "Sign Up",  new_user_registration_path, class: "btn btn-primary mt-3 mb-2 fs-5 w-100 "%>
        </div>
      </div>
    </div>
  </div>
</div>
