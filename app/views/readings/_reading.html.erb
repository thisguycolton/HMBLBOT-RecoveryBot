<div id="<%= dom_id reading %>">
  <div class='container-fluid p-0'>
    <div class="jumbotron text-bg-light py-5">
      <div class="container">
        <div class="d-flex">
          <span class="flex-fill">
            <% unless reading.meetingUrl.blank? %>
            <div class="position-absolute top-0 end-0 mt-5 mx-4">
              <a class="btn btn-lg btn-primary mt-5 d-none d-md-block align-middle" href="<%= reading.meetingUrl %>">   <i class="bi bi-camera-video-fill pe-3 "></i> Join With Zoom </a>
            </div>
            <% end %>
            <h1 class="display-3 fw-bold"><%= reading.meetingName %></h1>
            <h3 class="display-4 fw-semibold"> Meeting Reading </h3>
            <h3 class="display-5"> <span class="pr-1 "><%= reading.meetingDate.strftime("%B %d, %Y") %></span><span class="fw-lighter"><%= reading.meetingTime.strftime("%k") %>PM</span></h3>

            <% unless reading.meetingUrl.blank? %>
            <div class="d-flex">
              <a class="btn btn-primary mt-5 w-100 d-md-none " href="<%= reading.meetingUrl %>">   <i class="bi bi-camera-video-fill pe-3 "></i> Join With Zoom </a>
            </div>
            <% end %>

          </span>
        </div>
      </div>
    </div>
    <div class="container pt-4">
      <figure>
        <h2 class="font-weight-bold mb-4"><%= reading.title %></h2>
        
        <blockquote class="blockquote">
          <p>
            <%= reading.content %>
          </p>
        </blockquote>
        <figcaption class="blockquote-footer">
          <cite title="<%= reading.title %>" class=" fs-3"><%= reading.source %></cite>
        </figcaption>
      </figure>
    </div>
  </div>
  <div class="container-fluid mt-5 p-0">
    <div class="jumbotron text-bg-light py-5">
      <div class="container">
        <h2 class="text-center display-4 pb-3">Example Topics For Sharing</h2>
        <h3 class="card-subtitle mb-2 text-body-secondary text-center"><em>Feel free to check in!</em></h3>
        <hr>
        <ul class="list-unstyled li-questions">
          <%= reading.topic %>
        </ul>
      </div>
    </div>
  </div>
</div>

