<div class="overflow-hidden">
  <div class="row my-0">
    <div class="col bg-light rounded-5 shadow-sm ">
      <div class="w-100 bg-light mb-3 sticky-top">
        <h2 class="pb-4 pt-5 d-flex">
          <div class="align-content-start">
            <%= link_to reading_path(@reading), class: "btn btn-lg  btn-link text-dark text-decoration-none px-5"  do %>
              <i class="bi bi-chevron-left"></i>
            <% end %>
          </div>
          <span class="tracking-widest text-uppercase fw-bold align-text-top w-100 p-2">
            Editing Reading
          </span>
        </h2>
        <hr>
      </div>
      <div class="pt-0 m-0">
        <%= render "form", reading: @reading %> 
      </div>
    </div>
  </div>
</div>